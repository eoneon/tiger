<%= form_with(model: category) do |f| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-4">
      <%= f.text_field :category_name, placeholder: "category name", class: "form-control" %>
    </div>

    <div class="col-4 form-check form-check-inline">
      <%= f.radio_button :category_type, 'pornstar' %> Pornstar
      <%= f.radio_button :category_type, 'category' %> Category
    </div>

    <div class="col-auto">
      <button class="btn btn-sm btn-outline-primary form-control-sm" type="submit">create</button>
    </div>
  </div>
<% end %>
