<div class="row" id="pagination-nav">
  <%= render 'search_photos/pagination_nav', photos: nil, tags: nil, page: @page %>
</div>

<div class="row">
  <div class="col-3 sidebar">
    <% category_filter.each do |category_type, categories| %>
      <%= render 'search_photos/sidebar', category_type: category_type, categories: categories, photos: @photos_for_sidebar %>
    <% end %>
  </div>

  <div class="col-6 bg-dark rounded">
    <div class="row row-cols-1 mt-3 bg-dark text-center" id="photos-tag">
      <%= render 'categories/header', displayed_photos: @photos, total_photos: @photos_for_sidebar, category: nil %>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3 bg-dark justify-content-center text-center" id="photos-index">
      <%= render 'photos/index', photos: @photos %>
    </div>
  </div>

  <div class="col-3">
    <img src="../../../assets/wild_era.png" class="rounded float-end img-thumbnail mb-3" alt="..." width="400">
    <img src="../../../assets/hookup_1.png" class="rounded float-end img-thumbnail" alt="..." width="400">
  </div>
</div>
