<div class="row align-items-center justify-content-between bg-dark my-3 mx-0 p-3">
  <div class="col-4 text-start">
    <span class="text-warning sexy_text fs-1">What's the Magic Word?</span>
  </div>

  <div class="col-4">
    <%= form_for :lockup, url: { action: 'unlock' } do |form| %>
      <div class="input-group">
        <% unless @wrong == true %>
          <%= form.password_field "codeword", placeholder: "code word", autofocus: true, class: 'form-control' %>
        <% else %>
          <%= form.password_field "codeword", value: @codeword, class: 'nope', autofocus: true, class: 'form-control' %>
        <% end %>
        <%= button_tag "Go!", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
